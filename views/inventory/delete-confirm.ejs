<h1 id="inventoryEditHeading">Edit <%= itemName %></h1>

<div class="serverValidationError">
    <%- messages() %>
    <% if (errors) { %>
        <ul class="notice">
    <% errors.array().forEach(error => { %>
        <li><%= error.msg %></li>
    <%  }) %>
    </ul>
    <% } %>
</div>

<form id="deleteForm" class="invDelete" action="/inv/delete" method="post"> 

    <!-- Make -->
    <label for="inv_make">Make</label>
    <input type="text" id="inv_make" name="inv_make" class="EditFormMembers" 
           value="<%= locals.inv_make %>" readonly>

    <!-- Model -->
    <label for="inv_model">Model</label>
    <input type="text" id="inv_model" name="inv_model" class="EditFormMembers" 
           value="<%= locals.inv_model %>" readonly>

    <!-- Year -->
    <label for="inv_year">Year</label>
    <input type="number" id="inv_year" name="inv_year" class="EditFormMembers" 
           value="<%= locals.inv_year %>" readonly>

    <!-- Price -->
    <label for="inv_price">Price</label>
    <input type="number" id="inv_price" name="inv_price" class="EditFormMembers" 
           value="<%= locals.inv_price %>" readonly>

    <!-- Inventory ID (hidden) -->
    <input type="hidden" name="inv_id"
        <% if(locals.inv_id) { %> value="<%= locals.inv_id %>" <% } %>>
    
    <p class="deletePara">Confirm Deletion - The delete is permanent.</p>
    <button type="submit" id="editSubmitBtn">Delete Vehicle</button>

</form>

